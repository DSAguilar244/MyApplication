<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    tools:context=".ver_perro">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Nombre -->
        <TextView
            android:id="@+id/tv_ver_perro_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Sin especificar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:paddingBottom="20dp" />

        <!-- Atributo -->
        <TextView
            android:id="@+id/tv_ver_perro_raza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atributo: Sin especificar"
            android:textSize="20sp"
            android:textColor="#555555"
            android:paddingBottom="16dp" />

        <!-- Número en Pokédex -->
        <TextView
            android:id="@+id/tv_ver_perro_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número Pokédex: Sin especificar"
            android:textSize="20sp"
            android:textColor="#555555"
            android:paddingBottom="16dp" />

        <!-- Peso -->
        <TextView
            android:id="@+id/tv_ver_perro_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: Sin especificar"
            android:textSize="20sp"
            android:textColor="#555555"
            android:paddingBottom="32dp" />

        <!-- Botones -->
        <Button
            android:id="@+id/btn_ver_editar_perro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_ver_eliminar_perro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:backgroundTint="#B71C1C"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_ver_atras_perro"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>